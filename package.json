{
  "name": "summitswap-subsgraph",
  "description": "SummitSwap SubsGraph",
  "version": "1.0.0",
  "private": true,
  "repository": "https://github.com/Koda-Finance/summitswap-subgraph",
  "author": "SummitSwap",
  "license": "UNLICENSED",
  "workspaces": [
    "subgraphs/**/*"
  ],
  "scripts": {
    "codegen": "lerna run codegen",
    "build": "lerna run build",
    "deploy": "graph deploy --node https://api.studio.thegraph.com/deploy/ summitswap-subsgraph",
    "create-local": "graph create --node http://localhost:8020/ summitswap-subsgraph",
    "remove-local": "graph remove --node http://localhost:8020/ summitswap-subsgraph",
    "deploy-local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 summitswap-subsgraph",
    "format:check": "prettier --check '*/**/*.{js,ts}'",
    "format:write": "prettier --write '*/**/*.{js,ts}'",
    "lint-staged": "eslint '*/**/*.{js,ts}'",
    "prepare": "husky install"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "^0.21.0",
    "@graphprotocol/graph-ts": "^0.20.0",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.0",
    "prettier": "^2.4.0",
    "typescript": "^4.3.5",
    "lerna": "^4.0.0"
  }
}
